<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundFlatUIdark"
    android:weightSum="1">

    <TextView
        android:id="@+id/informationWaypoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/informationWaypoint"
        android:layout_margin="13dp"
        android:textColor="@color/TextFlatUIWhite"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/WaypointNameEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:hint="@string/hintWaypoint"
            android:layout_margin="13dp"
            android:inputType="textCapCharacters"
            android:textColor="@color/TextFlatUIWhite"
            android:textColorHint="@color/TextFlatUIWhite" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/arrivalLayout"
        android:orientation="horizontal"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/arrivaltime"
            android:text="@string/labelTimePicked"
            android:layout_weight="0.50"
            android:layout_margin="13dp"
            android:textColor="@color/TextFlatUIWhite"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setTimeButton"
            android:text="@string/buttonPickTime"
            android:layout_weight="0.50"
            android:layout_margin="13dp"
            android:textColor="@color/TextFlatUIWhite"/>

    </LinearLayout>
    <Button
        android:id="@+id/nextWaypointButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"

        android:text="@string/buttonNextWaypoint"
        android:textColor="@color/TextFlatUIWhite" />

    <Button
        android:id="@+id/waypointAddToFavourite"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"

        android:text="@string/buttonFavourite"
        android:textColor="@color/TextFlatUIWhite" />

    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:text="@string/buttonCalculate"
        android:textColor="@color/TextFlatUIWhite"
        />

</LinearLayout>