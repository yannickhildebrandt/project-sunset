<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundFlatUIdark">

    <TextView
        android:id="@+id/informationWaypoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/informationWaypoint"
        android:layout_margin="13dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/TextFlatUIWhite"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/WaypointNameEdit"
        android:hint="@string/hintWaypoint"
        android:inputType="textCapCharacters"
        android:layout_below="@+id/informationWaypoint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp"
        android:layout_margin="13dp"
        android:textColor="@color/TextFlatUIWhite"
        android:textColorHint="@color/TextFlatUIWhite"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/arrivalLayout"
        android:layout_below="@id/WaypointNameEdit"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/arrivaltime"
            android:text="@string/labelTimePicked"
            android:layout_weight="0.50"
            android:layout_margin="13dp"
            android:textColor="@color/TextFlatUIWhite"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setTimeButton"
            android:text="@string/buttonPickTime"
            android:layout_weight="0.50"
            android:layout_margin="13dp"
            android:textColor="@color/TextFlatUIWhite"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:layout_below="@+id/arrivalLayout"
        android:text="@string/buttonNextWaypoint">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nextWaypointButton"
            android:text="@string/buttonNextWaypoint"
            android:textColor="@color/TextFlatUIWhite"/>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/createWaypointlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:layout_below="@id/buttonLayout"
        android:text="@string/buttonNextWaypoint">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:id="@+id/waypointAddToFavourite"
            android:text="@string/buttonFavourite"

            android:textColor="@color/TextFlatUIWhite"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/createWaypointlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp">
        <Button
            android:id="@+id/buttonCalculate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:text="@string/buttonCalculate"
            android:textColor="@color/TextFlatUIWhite"/>
    </LinearLayout>
</RelativeLayout>