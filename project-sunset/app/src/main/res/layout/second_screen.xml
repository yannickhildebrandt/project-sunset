<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/informationWaypoint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/informationWaypoint"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/WaypointNameEdit"
        android:hint="@string/hintWaypoint"
        android:inputType="textCapCharacters"
        android:layout_below="@+id/informationWaypoint"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/waypointAddToFavourite"
        android:layout_below="@+id/WaypointNameEdit"
        android:text="@string/buttonFavourite"
        android:layout_marginTop="13dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/arrivalLayout"
        android:layout_below="@id/waypointAddToFavourite"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/arrivaltime"
            android:text="@string/labelTimePicked"
            android:layout_weight="0.50"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setTimeButton"
            android:text="@string/buttonPickTime"
            android:layout_weight="0.50"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_below="@id/arrivalLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:text="@string/buttonCalculator"
            android:id="@+id/calculatorButton" />
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.50"
            android:id="@+id/nextWaypointButton"
            android:text="@string/buttonNextWaypoint" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/buttonCalculate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:text="@string/buttonCalculate"/>

    </LinearLayout>



</RelativeLayout>