<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundFlatUIdark"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resultScreenTitle"
        android:text="@string/resultSunsetTitle"
        android:layout_weight="0.10"
        android:layout_marginTop="30dp"
        android:textColor="@color/TextFlatUIWhite"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noCloudsText"
            android:text="@string/textNoClouds"
            android:textColor="@color/TextFlatUIWhite"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noCloudsResult"
            android:textColor="@color/TextFlatUIWhite"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fewCloudsText"
            android:text="@string/textFewClouds"
            android:textColor="@color/TextFlatUIWhite"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fewCloudsResult"
            android:textColor="@color/TextFlatUIWhite"
            />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cloudsText"
            android:text="@string/textClouds"
            android:textColor="@color/TextFlatUIWhite"/>
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cloudsResult"
            android:textColor="@color/TextFlatUIWhite"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/positionText"
            android:text="@string/textPosition"
            android:textColor="@color/TextFlatUIWhite"
            />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/positionResult"
            android:textColor="@color/TextFlatUIWhite"
        />
        </LinearLayout>



</LinearLayout>